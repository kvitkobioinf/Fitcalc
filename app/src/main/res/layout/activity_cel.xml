<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="50dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".CelActivity">

    <TextView
        android:id="@+id/cel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/wybierzcel"
        android:textSize="20sp"
        android:textColor="#000"/>


    <TextView
        android:id="@+id/docelowawaga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:text="@string/wpiszswojawage"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/textwaga"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:autofillHints=""
        android:ems="10"
        android:layout_marginTop="5dp"
        android:background="@drawable/kontur_color"
        android:padding="10dp"
        android:hint="@string/licbawaga"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/utrata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/Utrata"
        android:background="@drawable/btn_color"
        android:textColor="#fafafa"/>

    <Button
        android:id="@+id/zachowanie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/ZachowanieMasy"
        android:background="@drawable/btn_color"
        android:textColor="#fafafa"/>

    <Button
        android:id="@+id/nabor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/NaborMasy"
        android:background="@drawable/btn_color"
        android:textColor="#fafafa"/>




</LinearLayout>


</ScrollView>
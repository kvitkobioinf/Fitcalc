<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".posilki">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Sniadanie"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            >


            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/plusik"
                android:text="@string/plusik"
                android:textSize="30sp"
                android:textColor="#fafafa">

            </Button>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:background="@drawable/plusik"
                android:src="@drawable/barcode_scan">

            </ImageButton>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="100dp"
                    android:hint="gg:mm"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@drawable/kontur_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wpisz_godzin_posi_ku"
                    android:textColor="#000"
                    android:layout_marginLeft="60dp"
                    />
            </LinearLayout>


        </LinearLayout>


</ScrollView>